<%- include("partials/header.ejs") %>
<html>
    <head>
        <title>
            recipe
        </title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
            <style>
              .position-relative{
                background-image: url('images/Food3.jpeg');
                background-repeat: no-repeat;
                background-size: cover;
                border-radius: 2rem;
              }
              body{
                background: linear-gradient(300deg,
                #f60303,
                #f49643,
                #f5ed56);
                opacity: 0.9;
                animation: gradient-animation 18s ease infinite;
              }
              .display-3{
                color: white;
              }
            </style>
    </head>
    <body>
    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-body-tertiary">
      <div class="col-md-6 p-lg-5 mx-auto my-5">
        <h1 class="display-3 fw-bold">Eating is Necessary But Cooking is an Art...</h1>
        <h3 class="fw-normal text-muted mb-3">Build anything you want with Aperture</h3>
        <div class="d-flex gap-3 justify-content-center lead fw-normal">
        </div>
      </div>
      <div class="product-device shadow-sm d-none d-md-block"></div>
      <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
    </div>
        <% if(data && data.results && data.results.length >0) { %>
            <% data.results.forEach(recipes => {%>
                <div class="col" style="margin-bottom: 20px;margin-top: 20px;">
          <div class="card shadow-sm">
            <h2><%= recipes.title %></h2>
            <a href="/recipes/<%=recipes.id %>">
                <img src="<%= recipes.image%>" alt="<%= recipes.title%>">
                </a>
            <div class="card-body">
              <p class="card-text">Here is a delicious recipe for you......</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a class="btn btn-sm btn-outline-secondary" href="/recipes/<%=recipes.id %>">View</a>

                </div>
                <small class="text-body-secondary"></small>
              </div>
            </div>
          </div>
        </div>
            <%})%>;
        <%}else{%>
            <p>No recipes found.Please enter another recipe...!!!</p>
        <%}%>
    </body>
</html>
